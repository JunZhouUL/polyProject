polynomial *createPoly(){
    polynomial *polyNew;
    llnode *p,*pre;
    int i,n;
    polyNew = (polynomial*)malloc(sizeof(polynomial));
    polyNew->structure->head->next = NULL;
    polyNew->structure->current = polyNew->structure->head;
    pre = polyNew->structure->head;
    printf("Please enter the number of polynomials N:\n");
    pirntf("** N should be a positive integer **")
    scanf("%d",&n);
    
    for( i=1; i<=n; i++ )
    {
        p = (llnode*)malloc(sizeof(llnode));
        printf("Please enter the current terms and power separated by spaces:");
        scanf("%lf %d",&p->element->coeffecient,&p->element->power);
        pre = p;
        p = pre->next;
    }
    p -> next = NULL;
    return polyNew;
}

void deletePoly( polynomial *poly ){
    llnode *p,*q;
    p = poly->structure->head;
    while( p->next != NULL ){
        p = p->next;
        q = p->next;
        p->next = q->next;
        free(q);
    }
    free(poly->structure->head);
    free(poly);
    printf("You have successfully deleted.\n");
}
